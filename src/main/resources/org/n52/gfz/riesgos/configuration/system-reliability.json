{
    "title": "SystemReliabilityProcess",
    "abstract": "Process for performing the reliability of infrastructure networks",
    "imageId": "gfzriesgos/system_reliability:latest",
    "workingDirectory": "/usr/share/git/system_reliability",
    "commandToExecute": "python3 System_Reliability_Analysis_local.py --intensity_file intensity_input.xml --output_file output.geojson",
    "exitValueHandler": "logging",
    "stderrHandler": "pythonTraceback",
    "input": [
        {
            "title": "intensity",
            "abstract": "File with the hazard intensities, for example a shakemap",
            "useAs": "file",
            "type": "shakemap",
            "schema": "http://earthquake.usgs.gov/eqcenter/shakemap",
            "path": "intensity_input.xml"
        },
        {
            "title": "country",
            "useAs": "commandLineArgument",
            "type": "string",
            "commandLineFlag": "--country",
            "allowed": [
                "chile",
                "ecuador"
            ]
        },
        {
            "title": "hazard",
            "useAs": "commandLineArgument",
            "type": "string",
            "commandLineFlag": "--hazard",
            "allowed": [
                "earthquake",
                "lahar"
            ]
        }
    ],
    "output": [
        {
            "title": "damage_consumer_areas",
            "abstract": "Damage in the consumer areas",
            "readFrom": "file",
            "path": "output.geojson",
            "type": "geojson"
        }
    ]
}
